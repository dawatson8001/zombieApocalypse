{% extends 'zombieApocalypse/base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="d-flex flex-row">
            <div class="stat"><b>Health: </b>{{ player.health }}</div>
            <div class="stat"><b>Level: </b>{{ level }}</div>
            <div class="stat"><b>Moves: </b>{{ moves }}</div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="d-flex flex-row">
            <div class="stat">
                <b>Weapon: </b>
                {% if player.weapon != null %}{{ player.weapon.name }} - {{ player.weaponCondition }}/{{player.weapon.maxItemCondition}}{% endif %}
            </div>
            <div class="stat">
                    <b>Armor: </b>
                    {% if player.armor != null %}{{ player.armor.name }} - {{ player.armorCondition }}/{{player.armor.maxItemCondition}}{% endif %}
                </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="d-flex flex-row">
            <div class="stat">
                <b>Medicine 1: </b>
                {% if player.medicineOne != null %}{{ player.medicineOne.name }} - {{ player.medicineOneUnits }}{% endif %}
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="d-flex flex-row">
            <div class="stat">
                <b>Medicine 2: </b>
                {% if player.medicineTwo != null %}{{ player.medicineTwo.name }} - {{ player.medicineTwoUnits }}{% endif %}
            </div>
        </div>
    </div>
    <div class="d-flex"></div>
        <div class="d-flex flex-row mb-3">
            <div class="p-2"><h4>Good luck, {{ player.username }}...</h4></div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="compass">
            <div class="d-flex justify-content-center">
                {% if 'N' in directions.direction %}
                    <a class="btn btn-primary direction" href="{{ path('move', {'username': player.username, 'from': 'N', 'currentLevel': level, 'currentMove': moves}) }}">N</a>
                {% else %}
                    <img id="compassMiddle" src="#" alt="">
                {% endif %}
            </div>
            {% if 'W' in directions.direction and 'E' in directions.direction %}
                <div class="d-flex justify-content-start">
                    <a class="btn btn-primary direction" href="{{ path('move', {'username': player.username, 'from': 'W', 'currentLevel': level, 'currentMove': moves}) }}" id="west">W</a>
                    <img id="compassMiddle" src="#" alt="">
                    <a class="btn btn-primary direction" href="{{ path('move', {'username': player.username, 'from': 'E', 'currentLevel': level, 'currentMove': moves}) }}">E</a>
                </div>
            {% elseif 'W' in directions.direction %}
                <div class="d-flex justify-content-start">
                    <a class="btn btn-primary direction" href="{{ path('move', {'username': player.username, 'from': 'W', 'currentLevel': level, 'currentMove': moves}) }}" id="west">W</a>
                </div>
            {% elseif 'E' in directions.direction %}
                <div class="d-flex justify-content-end">
                    <a class="btn btn-primary direction" href="{{ path('move', {'username': player.username, 'from': 'E', 'currentLevel': level, 'currentMove': moves}) }}">E</a>
                </div>
            {% else %}
                <img id="compassMiddle" src="#" alt="">
            {% endif %}
            <div class="d-flex justify-content-center">
                {% if 'S' in directions.direction %}
                    <a class="btn btn-primary direction" href="{{ path('move', {'username': player.username, 'from': 'S', 'currentLevel': level, 'currentMove': moves}) }}">S</a>
                {% endif %}
            </div> 
        </div>
    </div>
    <div class="d-flex justify-content-center">
_______________________________________________________________________________</br>
</div>
    {{ directions.situation.statement }}</br>
    {% if equipment != null %}
        You found: {{ equipment.name }} - {{ equipment.condition }}
    {% elseif medicine != null %}
        You found: {{ medicine.name }} - {{ medicine.units }}
    {% endif %}
{% endblock %}
